<div class="signForm">
	<div id="carouselBackground" class="carousel slide carousel-fade" data-ride="carousel" data-pause="false">
		<div class="img-cover">
			<div class="card">
				<div class="card-body">
					<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
					<%= f.hidden_field :reset_password_token %>
					<form class="card-form">
						<h2 class="text-center">비밀번호 재설정</h2><br>
						<!-- <#%= f.error_notification %>
						 <#%= f.full_error :reset_password_token %> -->
						<%= devise_error_messages! %>
					  <div class="form-group">
						<%= f.password_field :password, autocomplete: "off", class: "form-control validate", placeholder: "비밀번호", :required => true, :minlength => 6 %>
					  </div>
					  <div class="form-group">
						<%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control validate", placeholder: "비밀번호 확인", :required => true, :minlength => 6 %>
					  </div>
					  <div class="form-group">
						  <%= f.submit "재설정", class: "btn btn-primary btn-block" %>
					  </div>
						<div class="etc">
							<hr>
							<%= render "devise/shared/links" %>
						</div>
					</form>
					<% end %>
				</div>
			</div>
		</div>
	<div class="carousel-inner">
		<div class="carousel-item active">
		  <img class="carousel-img d-block w-100" src="/assets/gibraltar-screenshot-002.jpg">
		</div>
