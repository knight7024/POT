<div class="signForm">
	<div id="carouselBackground" class="carousel slide carousel-fade" data-ride="carousel" data-pause="false">
		<div class="card">
			<div class="card-body">
				<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				<form class="card-form">
					<h2 class="text-center">POT Sign In</h2>
					<div class="label-container" style="text-align: right">
						<small class="for">for KOREATECH</small>
					</div>
					<% flash.each do |type, value| %>
						<% if value == I18n.t('devise.failure.unauthenticated') %>
						<% next %>
						<% end %>
						<% if type == "alert" %>
							<div class="alert alert-danger alert-dismissible fade show" role="alert">
						<% elsif type == "warn" %>	
							<div class="alert alert-warning alert-dismissible fade show" role="alert">
						<% elsif type == "notice" %>	
							<div class="alert alert-success alert-dismissible fade show" role="alert">
						<% else %>
							<div class="alert alert-<%= type %> alert-dismissible fade show" role="alert">
						<% end %>
							  <ul style="margin-bottom: 0rem;"> <%= value %> </ul>
							  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							  </button>
							</div>
					<% end %>
				  <div class="form-group">
					<%= f.email_field :email, autofocus: true, class: "form-control validate", autocomplete: "email", placeholder: "아우누리 이메일", :required => true, pattern: "[A-Za-z0-9]{1,20}@koreatech.ac.kr" %>
				  </div>
				  <div class="form-group">
					<%= f.password_field :password, autocomplete: "off", class: "form-control validate", placeholder: "비밀번호", :required => true, :minlength => 6 %>
				  </div>
				  <div class="form-group">
					  <%= f.submit "로그인", class: "btn btn-primary btn-block" %>
				  </div>
					<div class="etc">
					  <div class="form-group form-check">
						  <% if devise_mapping.rememberable? %>
							  <%= f.check_box :remember_me, id: "remember_me", class: "form-check-input" %>
							  <%= f.label :remember_me, "로그인 상태 유지", :for => "remember_me" %>
						  <% end %>
					  </div>
						<hr>
						<%= render "devise/shared/links" %>
					</div>
				</form>
				<% end %>
			</div>
		</div>
