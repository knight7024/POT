<div class="signForm">
	<div id="carouselBackground" class="carousel slide carousel-fade" data-ride="carousel" data-pause="false">
		<div class="img-cover">
			<div class="card">
				<div class="card-body">
					<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
					<form class="card-form">
						<h2 class="text-center">POT Sign Up</h2>
						<div class="label-container" style="text-align: right">
							<small class="for">for KOREATECH</small>
						</div>
						  <%= devise_error_messages! %>
					  <div class="form-group">
						<%= f.email_field :email, autofocus: true, class: "form-control validate", autocomplete: "email", placeholder: "아우누리 이메일", :required => true, pattern: "[A-Za-z0-9]{1,20}@koreatech.ac.kr" %>
					  </div>
					  <div class="form-group">
						<%= f.password_field :password, autocomplete: "off", class: "form-control validate", placeholder: "비밀번호", :required => true, :minlength => 6 %>
					  </div>
					  <div class="form-group">
						<%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control validate", placeholder: "비밀번호 확인", :required => true, :minlength => 6 %>
					  </div>
					  <div class="form-group">
						  <%= f.submit "회원가입", class: "btn btn-primary btn-block" %>
					  </div>
						<div class="etc">
							<hr>
							<%= render "devise/shared/links" %>
						</div>
					</form>
					<% end %>
				</div>
			</div>
		</div>
	  <div class="carousel-inner">
		<div class="carousel-item active">
		  <img class="carousel-img d-block w-100" src="/assets/gibraltar-screenshot-002.jpg">
		</div>
		<div class="carousel-item">
		  <img class="carousel-img d-block w-100" src="/assets/genji-screenshot-001.jpg">
		</div>
		<div class="carousel-item">
		  <img class="carousel-img d-block w-100" src="/assets/media_img_1490255562568.jpg">
		</div>
		<div class="carousel-item">
		  <img class="carousel-img d-block w-100" src="/assets/media_img_1490255708376.jpg">
		</div>
		<div class="carousel-item">
		  <img class="carousel-img d-block w-100" src="/assets/lucio-screenshot-005.jpg">
		</div>
		<div class="carousel-item">
		  <img class="carousel-img d-block w-100" src="/assets/junkertown-screenshot-004.jpg">
		</div>
		<div class="carousel-item">
		  <img class="carousel-img d-block w-100" src="/assets/media_img_1490255493734.jpg">
		</div>
		<div class="carousel-item">
		  <img class="carousel-img d-block w-100" src="/assets/media_img_1490255777925.jpg">
		</div>
	  </div>
	</div>
