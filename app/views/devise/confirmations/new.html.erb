<div class="signForm">
	<div id="carouselBackground" class="carousel slide carousel-fade" data-ride="carousel" data-pause="false">
		<div class="img-cover">
			<div class="card">
				<div class="card-body">
					<%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
					<form class="card-form">
						<h2 class="text-center">인증메일 재발송</h2><br>
						<!-- <#%= f.error_notification %>
						<#%= f.full_error :confirmation_token %> -->
						<%= devise_error_messages! %>
					  <div class="form-group">
						<%= f.email_field :email, autofocus: true, class: "form-control validate", autocomplete: "email", placeholder: "아우누리 이메일", :required => true, pattern: "[A-Za-z0-9]{1,20}@koreatech.ac.kr" %>
					  </div>
					  <div class="form-group">
						  <%= f.submit "재발송", class: "btn btn-primary btn-block" %>
					  </div>
						<div class="etc">
							<hr>
							<%= render "devise/shared/links" %>
						</div>
					</form>
					<% end %>
				</div>
			</div>
		</div>
	<div class="carousel-inner">
		<div class="carousel-item active">
		  <img class="carousel-img d-block w-100" src="/assets/gibraltar-screenshot-002.jpg">
		</div>
